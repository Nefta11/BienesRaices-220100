extends ../layout/index 
block content 
    div.py-10 
        h1.text-center.text-4xl.my-10.font-extrabold.text-violet-600 Real 
            span.font-normal.text-black State 
        h2.text-center.text-3xl.font-extrabold= page 
        if errors
            each error in errors
                div(class="mx-auto max-w-md text-center bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert")
                    strong(class="font-bold") Error:
                    span= error.msg
                    button(class="absolute top-0 bottom-0 right-0 px-4 py-3" aria-label="Close" onclick="this.parentElement.style.display='none'")
                        i(class="fas fa-times")

            script.
                setTimeout(function(){
                    var alerts = document.querySelectorAll('[role="alert"]');
                    alerts.forEach(function(alert) {
                        alert.style.display = 'none';
                    });
                }, 5000);
        


        .mt-8.mx-auto.max-w-xl
            .bg-white.py-8.px-4.shadow-x1.rounded-1g
                form.space-y-5(action="password-recovery" method="POST" noValidate)
                    div
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for= "email") email:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="user@domain.com" name="email" type="email")
                    
                    input#btn-login.w-full.bg-indigo-600.text-white(class="text-gray-800 font-bold py-3 cursor-pointer bg-blue-200 rounded-xl hover:bg-red-400 hover:text-white" type="submit" value="Send an email")

                    div.flex.items-center.justify-between.pt-5
                        a.text-sm.text-gray-800(href="/login/register" class="hover:underline decoration-4 decoration-sky-600 ") If u dont have an account, Resgister
                        a.text-sm.text-gray-800(href="/login" class="hover:underline decoration-4 decoration-sky-600 ") Do you?, Login