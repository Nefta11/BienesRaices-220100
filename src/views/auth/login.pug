extends ../layout/index

block content 
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-Textos Real 
            span.font-normal.text-Otros State 
        h2.text-center.text-3xl.font-extrabold.text-Morado= page 

        .mt-8.mx-auto.max-w-xl 
            .bg-white.py-8.px-4.shadow-xl.rounded-lg 
                form.space-y-5(action="")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="email") Name: 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="user@domain.com" name="email" type="email")
                    div 
                        label.block.tetx-sm.uppercase.text-gray-700.mb-3.font-bold(for="password") Password: 
                        input#password2.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="********" name="password" type="password") 
                    div.flex.items-center.justify-between.pt-5
                        a.text-sm.text-gray-400(href="/login/register" class="hover:underline decoration-4 decoration-red-600") if u dont have an account
                        a.text-sm.text-gray-400(href="/login/password-recovery" class="hover:underline decoration-4 decoration-red-600") Forgot you password?
                    div
                        input#button_login.w-full.bg-Morado.text-white-font-bold.py-3.rounded.xl(class="bg-Morado hover:bg-Rojo" type="submit" value="Login")