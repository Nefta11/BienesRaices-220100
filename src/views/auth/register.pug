extends ../layout/index.pug 

block register
    div.py-10
        h1.text-center.text-4xl.my-10.font-extrabold.text-Textos Real
            span.font-normal.text-Otros State 
        h2.text-center.text-3xl.my-10.font-extrabold.text-Morado= page 
        
        .mt-8.mx-auto.max-w-xl 
            .bg-white.py-8.px-4.shadow-xl.rounded-lg
                form.space-y-5(action="")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="name") Name:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="Full Name" name="name")
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="email") Email:
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="user@domain.com" name="email" type="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="password") Password:
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="******" name="password" type="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-700.mb-3.font-bold(for="password") Confirm Password:
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-sm.place-holder-gray-400(placeholder="******" name="password" type="password")
                    div.flex.items-center.justify-between.pt-5
                        a.text-sm.text-gray-400(href="/login/password-recovery" class="hover:underline decoration-4 decoration-red-600") Forgot you password?
                        a.text-sm.text-gray-400(href="/login" class="hover:underline decoration-4 decoration-red-600") Do you?, Login
                    div 
                        input#button_login.w-full.bg.-Morado.text-white.font-Morado.py-3.rounded-xl(class="bg-Morado hover:bg-Rojo cursor-pointer" type="submit" value="Create Account")